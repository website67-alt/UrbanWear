body {
    margin: 0;
    font-family: 'Segoe UI', sans-serif;
    background: #f4f4f4;
}

/* Header */
header {
    background: #111;
    color: white;
    padding: 15px 40px;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

nav a {
    color: white;
    margin: 0 15px;
    text-decoration: none;
}

.cart {
    background: white;
    color: black;
    padding: 5px 10px;
    border-radius: 20px;
}

/* Hero */
.hero {
    background: linear-gradient(to right, black, #444);
    color: white;
    text-align: center;
    padding: 100px 20px;
}

.hero button {
    background: white;
    color: black;
    padding: 12px 25px;
    border: none;
    font-size: 16px;
    cursor: pointer;
}

/* Products */
.products {
    padding: 40px;
    text-align: center;
}

.product-box {
    display: flex;
    justify-content: center;
    gap: 20px;
    flex-wrap: wrap;
}

.product {
    background: white;
    padding: 15px;
    width: 220px;
    border-radius: 8px;
}

.product button {
    background: black;
    color: white;
    border: none;
    padding: 8px;
    cursor: pointer;
    width: 100%;
}

/* Footer */
footer {
    background: black;
    color: white;
    text-align: center;
    padding: 10px;
}
let cartCount = 0;

function addToCart() {
    cartCount++;
    document.getElementById("cart-count").innerText = cartCount;
    alert("Item added to cart!");
}
